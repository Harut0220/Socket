<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            justify-items: center;
            align-content: center;
        }

        #username {
            width: 250px;
            height: 20px;
        }

        #password {
            width: 250px;
            height: 20px;
        }

        #form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            justify-items: center;
            align-content: center;
            gap: 15px;
        }

        #submit {
            background-color: blue;
            color: white;
            width: 50px;
            height: 20px;
        }
        label{
            font-size: 25px;
        }
    </style>
</head>

<body>
    <h1>Form Submission</h1>
    <form action="/" method="post" id="form">
        <label for="username">Login</label>
        Gmail<input type="email" id="username" name="username" placeholder="Gmail Address" pattern="[a-zA-Z0-9._%+-]+@gmail\.com$" required>
        Password<input type="password" id="password" placeholder="Password" required>
        <button type="submit">Submit</button>
    </form>

    <script>
       
       
        // Function to generate a new UUID
        function generateUUID() {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
                var r = Math.random() * 16 | 0,
                    v = c == 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        }

        // Get the form element
      
           const form=document.getElementById("form")
        // Add event listener to the form submission
        form.addEventListener('submit', function(event) {
            // Get the value of the username input field
            var username = document.getElementById('username').value;

            // Check if the username matches the specified pattern
            var pattern = /[a-zA-Z0-9._%+-]+@gmail\.com$/;
            if (!pattern.test(username)) {
                // If the pattern does not match, prevent form submission
                event.preventDefault();
                alert('Please enter a valid Gmail address.');
            }else{
                var newRoomId = generateUUID();

            // Set the new action with the generated UUID
            form.action = '/' + newRoomId;

            // Submit the form
            form.submit();
            }
            
        });
    </script>
</body>

</html>
